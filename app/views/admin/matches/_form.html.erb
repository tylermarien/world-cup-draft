<%= form_for([:admin, @match]) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :occurs_at %><br>
    <%= f.datetime_select :occurs_at %>
  </div>
  <div class="field">
    <%= f.label :home_id %><br>
    <%= f.collection_select :home_id, Country.all, :id, :to_s %>
  </div>
  <div class="field">
    <%= f.label :away_id %><br>
    <%= f.collection_select :away_id, Country.all, :id, :to_s %>
  </div>
  <div class="field">
    <%= f.label :home_score %><br>
    <%= f.text_field :home_score %>
  </div>
  <div class="field">
    <%= f.label :away_score %><br>
    <%= f.text_field :away_score %>
  </div>
  <div class="field">
    <%= f.label :home_shootout_score %><br>
    <%= f.text_field :home_shootout_score %>
  </div>
  <div class="field">
    <%= f.label :away_shootout_score %><br>
    <%= f.text_field :away_shootout_score %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

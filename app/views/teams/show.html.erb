<h1><%= @team.name %></h1>
<p>
  <strong>Points:</strong>
  <%= @team.total %>
</p>
<ul class="team-and-player-list">
<% @team.countries.each do |country| %>
  <li>
    <strong><%= link_to country, country %> (<%= pluralize(country.calculate_total, 'point') %>)</strong>
    <% if country.eliminated? %>
      - Eliminated
    <% end %>
    <ul>
    <% @team.players.where(country_id: country.id).each do |player| %>
      <li><%= link_to player, player %> (<%= pluralize(player.calculate_total, 'point') %>)</li>
    <% end %>
    </ul>
  </li>
<% end %>
</ul>


<%= link_to 'Home', root_path %>

<h1>Listing matches</h1>

<table>
  <thead>
    <tr>
      <th>Occurs at</th>
      <th>Home</th>
      <th>Away</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.occurs_at.to_formatted_s(:long) %></td>
        <td><%= match.home.name %></td>
        <td><%= match.away.name %></td>
        <td><%= link_to 'Show', admin_match_path(match) %></td>
        <td><%= link_to 'Edit', edit_admin_match_path(match) %></td>
        <td><%= link_to 'Destroy', admin_match_path(match), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Match', new_admin_match_path %> |
